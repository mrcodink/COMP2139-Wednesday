@model Project

@{
    ViewBag.Title = "Delete Project";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you to delete this project?</h3>

<div>
    <div>Project</div>
    <hr />
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProjectName)
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectDescription)

        </dd>

    </dl>
    <form asp-action="DeleteConfirmed" asp-route-projectId="@Model.ProjectId" method="post">
        @Html.HiddenFor(model => model.ProjectId)
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </form>

</div>